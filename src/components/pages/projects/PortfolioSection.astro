---
import { PROJECTS_PORTFOLIO_SECTION } from '@/constants/ui-texts/projects';
---

<section class="flex items-center justify-center py-12 sm:py-24 px-4 bg-black">
	<div
		class="w-full max-w-5xl grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12"
	>
		<!-- Left column -->
		<div class="flex items-start">
			<p class="text-neutral-400">{PROJECTS_PORTFOLIO_SECTION.tagline}</p>
		</div>

		<!-- Right column -->
		<div class="flex items-start">
			<h3 class="text-3xl sm:text-4xl md:text-5xl font-bold text-white">
				{PROJECTS_PORTFOLIO_SECTION.title}
			</h3>
		</div>
	</div>
</section>
