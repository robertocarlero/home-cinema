---
import gallery1 from '@/assets/images/projects/item-1.jpg';
import gallery2 from '@/assets/images/projects/item-2.jpg';
import gallery3 from '@/assets/images/projects/item-3.jpg';
import gallery4 from '@/assets/images/projects/item-4.jpg';
import gallery5 from '@/assets/images/projects/item-5.jpg';
import gallery6 from '@/assets/images/projects/item-6.jpg';
import gallery7 from '@/assets/images/projects/item-7.jpg';
import gallery8 from '@/assets/images/projects/item-8.jpg';
import gallery9 from '@/assets/images/projects/item-9.jpg';
import { PROJECTS_GALLERY_SECTION } from '@/constants/ui-texts/projects';

const galleryItems = [
	{
		image: gallery1,
		alt: 'Super Mario themed game room design with custom arcade machines, mushroom stools, and colorful LED flooring for home entertainment.',
	},
	{
		image: gallery2,
		alt: 'Super Mario home theater room with wall murals, cozy geometric sofas, and cinematic lighting setup.',
	},
	{
		image: gallery3,
		alt: 'Mario Kart inspired gaming room featuring racing seats, LED ceiling lighting, and interactive themed decor.',
	},
	{
		image: gallery4,
		alt: 'Futuristic spaceship inspired home theater design with luxury recliners and immersive lighting for cinematic experience.',
	},
	{
		image: gallery5,
		alt: 'Custom home theater equipment rack area with integrated lighting and high-end audiovisual components.',
	},
	{
		image: gallery6,
		alt: 'Star Wars inspired luxury home cinema with ambient blue lighting, star ceiling, and premium leather seating.',
	},
	{
		image: gallery7,
		alt: 'Transformers themed home theater design featuring curved modern sofas, cinematic lighting, and collectible statues.',
	},
	{
		image: gallery8,
		alt: 'Luxury Transformers home theater setup with ambient LED lights, themed wall posters, and immersive layout.',
	},
	{
		image: gallery9,
		alt: 'Modern Transformers inspired cinema room with rounded seating, futuristic design, and starry ceiling lighting.',
	},
];
---

<section
	class="w-full h-full flex flex-col items-center px-4 sm:px-6 py-24 bg-black gap-24"
>
	<div class="mx-auto text-center">
		<h3 class="text-lg sm:text-2xl text-neutral-500 font-bold">
			{PROJECTS_GALLERY_SECTION.heading}
		</h3>
		<h4 class="text-2xl sm:text-4xl text-white font-bold max-w-xl">
			{PROJECTS_GALLERY_SECTION.title}
		</h4>
	</div>

	<div class="w-full grid sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
		{
			galleryItems.map((item) => (
				<div class="w-full h-full rounded overflow-hidden border border-neutral-800 hover:scale-105 transition-transform duration-300 hover:shadow-2xl">
					<img
						alt={item.alt}
						class="w-full h-full scale-105 object-cover"
						src={item.image.src}
					/>
				</div>
			))
		}
	</div>
</section>
