---
/**
 * Hero section component for the Home Cinema application.
 * Features a cinematic background with vignette overlay effect and call-to-action buttons.
 */

import image from '@/assets/hero-background.jpg';
import VignetteOverlay from '@/components/VignetteOverlay.astro';
import { HOME_HERO_SECTION } from '@/constants/ui_texts';

import { Button } from './ui/button';

export interface Props {
	className?: string;
}

const { className = '' } = Astro.props;
---

<section class={`relative w-screen h-screen overflow-hidden ${className}`}>
	<!-- Cinema Background with Vignette Effect -->
	<VignetteOverlay
		className="absolute top-0 left-0 w-full h-full z-10"
		height="100vh"
		imageUrl={image?.src}
		width="100vw"
	>
		<div
			class="w-full h-full flex items-end pb-16 justify-center bg-gradient-to-b from-black/20 via-black/5 to-black/30"
		>
			<div
				class="exclude-overlay cursor-auto text-center w-fit h-fit px-8"
			>
				<h1
					class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold text-white leading-tight drop-shadow-lg"
				>
					{HOME_HERO_SECTION.title}
				</h1>
				<p
					class="text-base sm:text-lg lg:text-xl text-gray-200 mb-6 leading-relaxed drop-shadow-md mx-auto max-w-xl"
				>
					{HOME_HERO_SECTION.subtitle}
				</p>

				<div
					class="flex flex-col sm:flex-row gap-4 justify-center items-center"
				>
					<Button>
						{HOME_HERO_SECTION.primaryButton}
					</Button>
					<Button variant="secondary">
						{HOME_HERO_SECTION.secondaryButton}
					</Button>
				</div>
			</div>
		</div>
	</VignetteOverlay>

	<!-- Content Overlay -->
</section>
