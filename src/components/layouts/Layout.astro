---
/**
 * Layout component for the Home Cinema application.
 * Provides the base HTML structure with head, meta tags, and body setup.
 */

import Footer from '@/components/layouts/Footer.astro';
import Header from '@/components/layouts/Header.astro';
import '@/styles/global.css';
import '@/styles/fonts.css';

export interface Props {
	title?: string;
	description?: string;
	lang?: string;
	theme?: 'light' | 'dark';
}

const {
	title = 'Home Cinema',
	description = 'Transform your space into a home cinema experience',
	lang = 'en',
	theme = 'dark',
} = Astro.props;
---

<!doctype html>
<html class={theme} lang={lang}>
	<head>
		<meta charset="utf-8" />
		<link href="/favicon.svg" rel="icon" type="image/svg+xml" />
		<meta content="width=device-width, initial-scale=1.0" name="viewport" />
		<meta content={Astro.generator} name="generator" />
		<meta content={description} name="description" />
		<title>{title}</title>

		<!-- Reset styles -->
		<style>
			* {
				margin: 0;
				padding: 0;
				border: 0;
				box-sizing: border-box;
			}
		</style>
	</head>
	<body class={theme}>
		<Header />
		<main class="w-full px-4 sm:px-6 lg:px-8 overflow-hidden">
			<slot />
		</main>
		<Footer />
	</body>
</html>
