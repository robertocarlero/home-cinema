---
/**
 * Layout component for the Home Cinema application.
 * Provides the base HTML structure with head, meta tags, and body setup.
 */

import { SEO } from 'astro-seo';

import Footer from '@/components/layouts/Footer.astro';
import Header from '@/components/layouts/Header.astro';
import '@/styles/global.css';
import '@/styles/fonts.css';

export interface Props {
	title?: string;
	description?: string;
	lang?: string;
	theme?: 'light' | 'dark';
	seo?: {
		titleTemplate?: string;
		titleDefault?: string;
		canonical?: string;
		noindex?: boolean;
		nofollow?: boolean;
		charset?: string;
		languageAlternates?: Array<{ href: string; hrefLang: string }>;
		openGraph?: any;
		twitter?: any;
		extend?: any;
	};
}

const {
	title = 'Home Cinema',
	description = 'Transform your space into a home cinema experience',
	lang = 'en',
	theme = 'dark',
	seo = {},
} = Astro.props;
---

<!doctype html>
<html class={theme} lang={lang}>
	<head>
		<meta content="width=device-width, initial-scale=1.0" name="viewport" />
		<meta content={Astro.generator} name="generator" />

		<SEO
			charset="utf-8"
			description={description}
			title={title}
			{...seo}
			extend={{
				link: [
					{
						rel: 'icon',
						href: '/favicon.svg',
						type: 'image/svg+xml',
					},
				],
				...seo.extend,
			}}
		/>

		<!-- Reset styles -->
		<style>
			* {
				margin: 0;
				padding: 0;
				border: 0;
				box-sizing: border-box;
			}
		</style>
	</head>
	<body class={theme}>
		<Header />
		<main class="w-full px-4 sm:px-6 lg:px-8 overflow-hidden">
			<slot />
		</main>
		<Footer />
	</body>
</html>
