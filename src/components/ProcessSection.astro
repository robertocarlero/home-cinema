---
/**
 * Process Section component for the Home Cinema application.
 * Displays the 3-step process with an interactive slider showcasing each step.
 */

import { Slider } from '@/components/react/Slider.tsx';
import { Button } from '@/components/ui/button';
import { HOME_PROCESS_SECTION } from '@/constants/ui_texts';
---

<section class="py-24 px-4 sm:px-8 bg-black text-white w-full">
	<div class="max-w-5xl mx-auto">
		{/* Header Section */}
		<div class="mb-12">
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-4 lg:gap-8 items-start">
				{/* Title */}
				<div>
					<h2 class="text-2xl sm:text-3xl font-bold leading-tight">
						{HOME_PROCESS_SECTION.title}
					</h2>
				</div>

				{/* Description and CTA */}
				<div>
					<p class="text-neutral-500 leading-none mb-2">
						{HOME_PROCESS_SECTION.description}
					</p>
					<Button size="sm" variant="outline">
						{HOME_PROCESS_SECTION.primaryButton}
					</Button>
				</div>
			</div>
		</div>

		{/* Slider Section */}
		<div>
			<Slider client:visible slides={HOME_PROCESS_SECTION.steps} />
		</div>
	</div>
</section>
