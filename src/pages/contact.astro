---
// Contact page for the Home Cinema application.
// Features the contact section with form and contact information.

import Layout from '@/components/layouts/Layout.astro';
import FAQ from '@/components/pages/contact/FAQ.astro';
import Hero from '@/components/pages/contact/Hero.astro';
import { PAGE_METADATA } from '@/constants/ui-texts/global';
---

<Layout
	description={PAGE_METADATA.contact.description}
	seo={{
		openGraph: {
			basic: {
				title: PAGE_METADATA.contact.title,
				type: 'website',
				image: '/logo.jpeg',
				url: Astro.url.href,
			},
			optional: {
				siteName: 'Home Cinema Solutions',
			},
		},
		twitter: {
			card: 'summary_large_image',
			site: '@homecinema.solutions',
			title: PAGE_METADATA.contact.title,
			image: '/logo.jpeg',
			description: PAGE_METADATA.contact.description,
		},
	}}
	theme="dark"
	title={PAGE_METADATA.contact.title}
>
	<Hero />
	<FAQ />
</Layout>
