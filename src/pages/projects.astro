---
/**
 * Projects page for the Home Cinema application.
 * Showcases our portfolio of luxury home cinema projects across Dallas.
 */

import Layout from '@/components/layouts/Layout.astro';
import ClaimsSection from '@/components/pages/projects/ClaimsSection.astro';
import CTAs from '@/components/pages/projects/CTAs.astro';
import FeatureCards from '@/components/pages/projects/FeatureCards.astro';
import Gallery from '@/components/pages/projects/Gallery.astro';
import Hero from '@/components/pages/projects/Hero.astro';
import PortfolioSection from '@/components/pages/projects/PortfolioSection.astro';
import Video from '@/components/pages/projects/Video.astro';
import { PAGE_METADATA } from '@/constants/ui-texts/global';
---

<Layout
	description={PAGE_METADATA.projects.description}
	theme="dark"
	title={PAGE_METADATA.projects.title}
>
	<Hero />
	<ClaimsSection />
	<FeatureCards />
	<PortfolioSection />
	<Video />
	<Gallery />
	<CTAs />
</Layout>
