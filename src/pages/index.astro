---
/**
 * Home page for the Home Cinema application.
 * Features the main hero section with cinematic background and call-to-action.
 */

import Layout from '@/components/layouts/Layout.astro';
import Blocks from '@/components/pages/home/Blocks.astro';
import ClaimsSection from '@/components/pages/home/ClaimsSection.astro';
import CTAs from '@/components/pages/home/CTAs.astro';
import Hero from '@/components/pages/home/Hero.astro';
import Packages from '@/components/pages/home/Packages.astro';
import Partners from '@/components/pages/home/Partners.astro';
import ProcessSection from '@/components/pages/home/ProcessSection.astro';
import Video from '@/components/pages/home/Video.astro';
import { PAGE_METADATA } from '@/constants/ui-texts/global';
---

<Layout
	description={PAGE_METADATA.home.description}
	theme="dark"
	title={PAGE_METADATA.home.title}
>
	<Hero />
	<ProcessSection />
	<ClaimsSection />
	<Packages />
	<Blocks />
	<Video />
	<Partners />
	<CTAs />
</Layout>
