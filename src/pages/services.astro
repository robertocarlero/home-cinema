---
/**
 * Services page for the Home Cinema application.
 * Features the services hero section with information about custom design & installation.
 */

import Layout from '@/components/layouts/Layout.astro';
import Hero from '@/components/pages/services/HeroServices.astro';
import ServicesCTAs from '@/components/pages/services/ServicesCTAs.astro';
import ServicesGrid from '@/components/pages/services/ServicesGrid.astro';
import { PAGE_METADATA } from '@/constants/ui-texts/global';
---

<Layout
	description={PAGE_METADATA.services.description}
	seo={{
		openGraph: {
			basic: {
				title: PAGE_METADATA.services.title,
				type: 'website',
				image: '/logo.jpeg',
				url: Astro.url.href,
			},
			optional: {
				siteName: 'Home Cinema Solutions',
			},
		},
		twitter: {
			card: 'summary_large_image',
			site: '@homecinema.solutions',
			title: PAGE_METADATA.services.title,
			image: '/logo.jpeg',
			description: PAGE_METADATA.services.description,
		},
	}}
	theme="dark"
	title={PAGE_METADATA.services.title}
>
	<Hero />
	<ServicesGrid />
	<ServicesCTAs />
</Layout>
